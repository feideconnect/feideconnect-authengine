<!doctype html>
<html lang="{{ currentLanguage }}">
 <head>
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge">
  <meta name="robots" content="noindex, nofollow">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=yes">
  <title>{{ pagetitle|trans }}</title>

  {% if isDevelopment == 'dev' %}
   <link rel="stylesheet" type="text/css" href="/static/components/pure/pure.css" />
   <link rel="stylesheet" type="text/css" href="/static/components/selectize/dist/css/selectize.default.css" />
   <link rel="stylesheet" type="text/css" href="/static/components/font-awesome/css/font-awesome.css" />
   <link rel="stylesheet" type="text/css" href="/static/css/src/style.css" />
   {# prefetch javascript resources -#}
   <link rel="prefetch" href="/static/components/jquery/dist/jquery.js" />
   <link rel="prefetch" href="/static/components/selectize/dist/js/standalone/selectize.js" />
   <link rel="prefetch" href="/static/js/src/common.js" />
  {% else %}
   <link rel="stylesheet" type="text/css" href="/static/css/bundle.css" />
  {% endif %}

 {# For extra header elements #}
 {% block head %}{% endblock %}
 </head>

 <body id="{{ templateName }}">
 {%- include "partials/languages.twig" %}
 {# Main content block #}
 {%- block content %}{% endblock %}

  <footer>
  {% block footer %}{% endblock %}

  </footer>

  {%- if isDevelopment %}

  <script type="application/javascript" src="/static/components/jquery/dist/jquery.js"></script>
  <script type="application/javascript" src="/static/components/selectize/dist/js/standalone/selectize.js"></script>
  <script type="application/javascript" src="/static/js/src/common.js"></script>
   {%- block scripts %}{% endblock %}

  {%- endif %}

 </body>
</html>
