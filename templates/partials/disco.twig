<div id="panedisco" class="container hide">
 <div class="pure-g">
  <div class="pure-u-1 pure-u-md-2-3 orgchoices">
   <p>{{ "eduproviders"|trans }}</p>
   <div class="list-group-item">
    {# Form for choosing country and searching for providers #}
    <form id="schoolsearchform" class="pure-form">
     <select id="countryselector"></select>
     <div id="usersearchwrapper">
      <input id="usersearch" type="text" placeholder="{{ "searchfor"|trans }}" />
     </div>
    </form>
    <small style='display: none'>
     <i class="fa fa-map-marker"></i> <span id="locationtitle"></span>
     <a id="updatelocation" style="color: #533; margin-left: 1.4em" href="#">
      <i class="fa fa-dot-circle-o"></i> {{ "updatelocation"|trans }}</a>
     <a id="removelocation" style="color: #755; margin-left: 1.4em; display: none" href="#">
      <i class="fa fa-times"></i> {{ "forget"|trans }}</a>
     <a id="why" style="color: #755; margin-left: 1.4em" data-toggle="tooltip" data-placement="top" title="{{ "whatmore"|trans }}">
      <i class="fa fa-question"></i> {{ "what"|trans }}</a>
    </small>
   </div>
   {# List of identity providers #}
   <div id="idplist" class="list-group idplist"></div>
  </div><!-- column -->
  {# Alternative choices #}
  <div class="pure-u-1 pure-u-md-1-3 altchoices">
   <p class="align-left">{{ "alternatechoice"|trans }}</p>
   <div class="list-group idplist" id="idplistextra"></div>
  </div><!-- column -->
 </div><!-- row -->
 <div>
  <label class="pure-checkbox">
   <input id="rememberme" type="checkbox" checked="checked">
   {{ "rememberme"|trans }}
  </label>
 </div>
</div><!-- container -->
